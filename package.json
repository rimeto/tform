{
  "name": "tform",
  "version": "0.4.1",
  "description": "Transform JSON records easily",
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "license": "MIT",
  "repository": "github:rimeto/tform",
  "scripts": {
    "build": "./node_modules/typescript/bin/tsc",
    "clean": "rm -rf build node_modules",
    "lint": "tslint -c ./tslint.json src/**/*.ts",
    "precommit": "lint-staged",
    "prepublishOnly": "yarn build",
    "test": "jest",
    "watch": "tsc --watch"
  },
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "@types/node": "^9.4.6",
    "husky": "^0.14.3",
    "jest": "^22.0.3",
    "lint-staged": "^7.0.4",
    "prettier": "^1.9.2",
    "ts-jest": "^22.0.0",
    "tslint": "^5.8.0",
    "typescript": "2.8.1"
  },
  "jest": {
    "collectCoverage": false,
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "roots": [
      "src/"
    ],
    "testRegex": "/__tests__/(?!_).*$",
    "transform": {
      ".(ts|tsx)": "./node_modules/ts-jest/preprocessor.js"
    }
  },
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "*.{ts,tsx}": [
        "prettier --write",
        "tslint -c ./tslint.json --fix",
        "git add"
      ]
    }
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "@types/lodash": "^4.14.92",
    "lodash": "^4.17.4",
    "ts-optchain": "^0.1.2"
  },
  "engines": {
    "node": ">4"
  }
}
